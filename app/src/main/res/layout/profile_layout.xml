<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#565D70"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:fontFamily="@font/redhat_medium"
                android:text="Akun Saya"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_alert">

        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_person_24"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_marginTop="80dp">
            </ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgUser"
            android:layout_centerHorizontal="true"
            android:text="John Doe"
            android:textSize="28sp"
            android:textColor="@color/teal_700"
            android:fontFamily="sans-serif"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rellay2"
        android:layout_below="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LLakun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akun"
                android:textColor="@color/teal_700"
                android:fontFamily="sans-serif-black"
                android:layout_marginLeft="25dp"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/LLakun"
            android:id="@+id/LLmyakun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearlayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:src="@drawable/ic_baseline_people_24">
                </ImageView>
                <TextView
                    android:id="@+id/edtTmpt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:text="Akun Saya"
                    android:textSize="20dp">
                    <requestFocus />
                </TextView>
                <Button
                    android:id="@+id/btnAkunSaya"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@android:color/black"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:text=">"
                    android:textSize="20dp">
                    <requestFocus />
                </Button>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/underline1"
            android:layout_below="@+id/LLmyakun"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </View>

        <LinearLayout
            android:layout_below="@id/underline1"
            android:id="@+id/LLlaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/linearlayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:src="@drawable/ic_baseline_wysiwyg_24">
                </ImageView>
                <TextView
                    android:id="@+id/txtLaporan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:text="Laporan Saya"
                    android:textSize="20dp">
                    <requestFocus />
                </TextView>
                <Button
                    android:id="@+id/btnLaporan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@android:color/black"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:text=">"
                    android:textSize="25dp">
                    <requestFocus />
                </Button>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/underline2"
            android:layout_below="@+id/LLlaporan"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </View>
        <LinearLayout
            android:id="@+id/LLlainnya"
            android:layout_below="@+id/underline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lainnya"
                android:textColor="@color/teal_700"
                android:fontFamily="sans-serif-black"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/LLlainnya"
            android:id="@+id/LLpemberitahuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">
            <LinearLayout
                android:id="@+id/linearlayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.045"
                    android:src="@drawable/ic_notifications_black_24dp">
                </ImageView>
                <TextView
                    android:id="@+id/txtPemberitahuan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:text="Pemberitahuan"
                    android:textSize="20dp">
                    <requestFocus />
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/underline3"
            android:layout_below="@+id/LLpemberitahuan"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </View>

        <LinearLayout
            android:layout_below="@id/underline3"
            android:id="@+id/LLsandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearlayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_lock_24">
                </ImageView>
                <TextView
                    android:id="@+id/txtSandi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:text="Ganti Kata Sandi"
                    android:textSize="20dp">
                    <requestFocus />
                </TextView>
                <Button
                    android:id="@+id/btnSandi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@android:color/black"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:text=">"
                    android:textSize="25dp">
                    <requestFocus />
                </Button>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/underline4"
            android:layout_below="@+id/LLsandi"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </View>

        <LinearLayout
            android:layout_below="@id/underline4"
            android:id="@+id/LLKeluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearlayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_logout_24">
                </ImageView>
                <TextView
                    android:id="@+id/txtKeluar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:text="Keluar"
                    android:textSize="20dp">
                    <requestFocus />
                </TextView>
                <Button
                    android:id="@+id/btnKeluar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@android:color/black"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:text=">"
                    android:textSize="25dp">
                    <requestFocus />
                </Button>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>